# archlinux:base as of Oct. 25th, 2021
FROM archlinux@sha256:04d0ec982fe298e0a8fbda48461945c8ed6f0b24dc12492e68b31eac576fc327

RUN pacman -Syy --noconfirm archlinux-keyring
RUN rm -fr /etc/pacman.d/gnupg
RUN pacman-key --init
RUN pacman-key --populate archlinux

# Provide relevant binaries
RUN pacman -Syu --noconfirm
RUN pacman -S --noconfirm btrfs-progs cryptsetup curl make python python-pip restic rsync sudo

# Setup Poetry
ENV POETRY_VERSION=1.1.13
RUN curl -sSL https://raw.githubusercontent.com/python-poetry/poetry/$POETRY_VERSION/get-poetry.py | python3 -
ENV PATH=$PATH:/root/.poetry/bin


# Setup production dependencies
WORKDIR /project
COPY pyproject.toml poetry.lock ./
RUN poetry install

# Install project
COPY src/ src/
RUN poetry install

# Include test files
COPY setup.cfg .

CMD poetry run pytest --no-cov .
