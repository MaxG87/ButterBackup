# python:3.11.1-slim-bullseye as of Feb 8th, 2023
FROM python@sha256:1591aa8c01b5b37ab31dbe5662c5bdcf40c2f1bce4ef1c1fd24802dae3d01052

# Provide excecutables
ENV DEBIAN_FRONTEND=noninteractive
RUN apt update && \
    apt install -y btrfs-progs cryptsetup curl make restic rsync sudo && \
    apt autoclean

# Setup Poetry
ENV POETRY_VERSION=1.3.2
RUN python3 -m pip install "poetry==$POETRY_VERSION"
ENV PATH=$PATH:/root/.poetry/bin


# Setup production dependencies
WORKDIR /project
COPY pyproject.toml poetry.lock ./
RUN poetry install

# Install project
COPY src/ src/
RUN poetry install

# Include test files
COPY setup.cfg .

# Create /dev/disk/by-uuid/. It is required by the test suite but not available
# in Docker containers by default.
CMD mkdir -p /dev/disk/by-uuid/ && poetry run pytest --no-cov .
