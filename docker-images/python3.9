# python:3.9.17-slim-bookworm as of 15 June 2023
FROM python@sha256:458de07c635e7b842b821d3d3668f3b2ab71090707d555eb53410b45ff618639

# Provide excecutables
ENV DEBIAN_FRONTEND=noninteractive
RUN apt update && \
    apt install -y btrfs-progs cryptsetup make restic rsync sudo && \
    apt autoclean

# Setup Poetry
ENV POETRY_VERSION=1.3.2
RUN python3 -m pip install "poetry==$POETRY_VERSION"
ENV PATH=$PATH:/root/.poetry/bin


# Setup production dependencies
WORKDIR /project
COPY pyproject.toml poetry.lock ./
RUN poetry install

# Install project
COPY src/ src/
RUN poetry install

# Include test files
COPY setup.cfg .

# Create /dev/disk/by-uuid/. It is required by the test suite but not available
# in Docker containers by default.
CMD mkdir -p /dev/disk/by-uuid/ && poetry run pytest --no-cov .
